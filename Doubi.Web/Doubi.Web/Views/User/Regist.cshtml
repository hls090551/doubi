@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Regist</title>
    <style type="text/css">
        * {
            margin:0;
            padding:0;
        }
        body {
          font: normal 14px "Helvetica Neue", Arial, sans-serif;
          
        }
        .page-wrap {
          height: 100%;
          background: #eef1f3;
        }
        .page-content {
          position: relative;
          width: 100%;
          background: #fefefe;
        }
        .content {
          max-width: 1130px;
          _width: 1130px;
          padding-left: 0;
          padding-right: 0;
          margin-left: auto;
          margin-right: auto;
          overflow: hidden;
        }
        .user-form {
          text-align: center;
          padding: 40px;
        }
        .user-form {
          width: 40%;
          margin-left: 20%;
          float: left;
        /*   float: right; */
          display: inline;
        }
        .user-form-fieldset {
          width: 80%;
          margin: 0 auto 20px;
          position: relative;
        }
        .user-form-label {
          display: block;
          font-size: 14px;
          text-align: left;
          padding: 5px 2px;
          letter-spacing: 5px;
        }
        .user-form-field {
          display: block;
          width: 100%;
          padding: 10px;
          border: 1px solid #c1d0d9;
          background: #fefefe;
          border-radius: 5px;
        }
        .user-form-button {
          display: inline-block;
          white-space: nowrap;
          border-radius: 5px;
          border: none;
          color: #fcfcfc;
          background: #0f56a3;
          cursor: pointer;
        }
        .sign-up-button {
          margin-top: 20px;
          margin-bottom: 20px;
          width: 200px;
          height: 47px;
          line-height: 45px;
          font-size: 18px;
        }
        #sign-up .cellphone {
          width: 50%;
          float: left;
        }
        #sign-up .vercode-button {
          padding: 10px  0;
          width: 40%;
        }
    </style>
</head>
<body>
<div class="page-wrap">
    <div class="page-content">
    <div class="content">
        <!--      注册    -->
        <div id="sign-up">
        <div class="user-form">
            <form action="/user/regist" method="post" class="sign-in-form user-form-form">
            
            <!--      用户名        -->
            <div class="user-form-fieldset">
                <label class="user-form-label" for="name">用户名：</label>
                <input class="user-form-field" type="text" name="username" id="username" placeholder="用户名" />
            </div>
            
            <!--       密码       -->
            <div class="user-form-fieldset">
                <label class="user-form-label" for="password">密码：</label>
                <input class="user-form-field" type="password" name="pwd" id="pwd" placeholder="密码" />
            </div>
            
            <!--       重复密码       -->
            <div class="user-form-fieldset">
                <label class="user-form-label" for="password-repeat">请再输入一次密码：</label>
                <input class="user-form-field" type="password" name="password-repeat" id="password-repeat" placeholder="请再输入一次密码" />
            </div>
            
            <!--       手机号       -->
            <div class="user-form-fieldset phone-fieldset">
                <label class="user-form-label" for="cellphone">手机号：</label>
                <input class="user-form-field cellphone" type="text" name="mobile" id="mobile" placeholder="手机号" />
                <input type="button" class="vercode-button user-form-button" name="btn-sendcode" value="获取验证码" />
            </div>
            
            <!--       手机验证码       -->
            <div class="user-form-fieldset">
                <label class="user-form-label" for="verifycode">短信验证码：</label>
                <input class="user-form-field" type="text" name="m_vcode" id="m_vcode" placeholder="短信验证码" />
            </div>

            <!--        注册按钮      -->
            <button type="submit" class="sign-up-button user-form-button">注册</button>
        </form> 
        </div>
        </div> 
    </div>
    </div>
</div>
</body>
</html>
